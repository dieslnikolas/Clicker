{
    "name": "clicker",
    "productName": "Clicker shell",
    "version": "1.0.0",
    "main": "main.js",
    "private": true,
    "scripts": {
        "installdeps": "npm ci && cp package.json ../../dist/shell && cd ../../dist/shell && npm install --only=production",
        "build": "tsc -p tsconfig.json",
        "start": "cd ../../dist/shell && npx electron ./main.js --serve",
        "development": "concurrently \"npm run api:build\" \"npm run api:start\"",
        "build:dev": "npm run build -- -c dev",
        "build:prod": "npm run build -- -c production",
        "electron:serve-tsc": "tsc -p tsconfig.json",
        "electron:serve": "wait-on tcp:4200 && npm run electron:serve-tsc && npx electron . --serve",
        "electron:local": "npm run build:prod && npx electron .",
        "electron:build": "npm run build:prod && electron-builder build --publish=never"
    },
    "dependencies": {
        "@electron/remote": "1.2.0",
        "electron": "^18.2.3",
        "electron-reload": "^2.0.0-alpha.1",
        "fs-extra": "^10.0.1",
        "log4js": "^6.4.4"
    },
    "devDependencies": {
        "electron-builder": "^23.0.3",
        "typescript": "^4.6.4"
    }
}

{
    "version": "2.0.0",
    "tasks": [
      {
        "label": "Build.Main",
        "type": "shell",
        "command": "npm run shell:development",
        "isBackground": false,
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": {
          "owner": "typescript",
          "source": "ts",
          "applyTo": "closedDocuments",
          "fileLocation": ["relative", "${cwd}"],
          "pattern": "$tsc",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*",
            "endsPattern": "^.*Terminal will be reused by tasks, press any key to close it.*"
          }
        }
      },
      {
        "label": "Build.Renderer",
        "type": "shell",
        "command": "npm run client:development",
        "isBackground": true,
        "group": {
          "kind": "build",
          "isDefault": true
        },
        "problemMatcher": {
          "owner": "typescript",
          "source": "ts",
          "applyTo": "closedDocuments",
          "fileLocation": ["relative", "${cwd}"],
          "pattern": "$tsc",
          "background": {
            "activeOnStart": true,
            "beginsPattern": "^.*",
            "endsPattern": "^.*Compiled successfully.*"
          }
        }
      }
    ]
  }
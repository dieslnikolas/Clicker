{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "1.0.0",
    "compounds": [
        {
            "name": "Debug ALL (F5)",
            "configurations": [ "Client Angular", "API", "Shell" ]
        }
    ],
    "configurations": [
        {
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "name": "API",
            "program": "${workspaceFolder}/Clicker.API/src/app.ts",
            "request": "launch",
            "restart": true,
            "runtimeExecutable": "nodemon",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Client Angular",
            "type": "chrome",
            "request": "attach",
            "port": 9786,
            "url": "http://localhost:4200",
            "sourceMaps": true,  
            "timeout": 10000,
            "trace": true,
            "sourceMapPathOverrides": {
                "webpack:///./*": "${workspaceFolder}/Clicker.Client/*"
            },
            "preLaunchTask": "Build.Renderer"
        },
        {
            "name": "Shell",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "${workspaceFolder}/Clicker.Shell/node_modules/.bin/electron",
            "trace": true,
            "runtimeArgs": [
                "--serve",
                ".",
                "--remote-debugging-port=9786"
            ],
            "windows": {
                "runtimeExecutable": "${workspaceFolder}/Clicker.Shell/node_modules/.bin/electron.cmd"
            },
            "preLaunchTask": "Build.Main"
        }
    ]
}
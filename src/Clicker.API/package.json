        "@types/swagger-ui-express": "^4.1.3",
        "copyfiles": "^2.4.1",
        "nodemon": "^2.0.16",
        "ts-node": "^10.7.0",
        "ts-node-dev": "^1.1.8",
        "tslib": "^2.4.0",
        "typescript": "^4.4.4"

{
    "name": "clicker-api",
    "version": "1.0.0",
    "description": "RESTFUL API fro Clicker clients",
    "main": "server.js",
    "author": "Nikolas Diesl",
    "license": "ISC",
    "scripts": {
        "installdeps": "npm ci && cp package.json ../../dist/api && cd ../../dist/api && npm install --only=production",
        "build": "tsc -p tsconfig.json -w ",
        "start": "cd ../../dist/api && nodemon -q server.js",
        "development": "concurrently \"npm run api:build\" \"npm run api:start\""
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.0.1",
        "express": "^4.17.1",
        "express-session": "^1.17.2",
        "multer": "^1.4.2"
    },
    "devDependencies": {
        "@types/express": "^4.17.12",
        "@types/express-session": "^1.17.3",
        "@types/multer": "^1.4.5",
        "@types/node": "^15.12.1",
        "concurrently": "^7.2.0",
        "nodemon": "^2.0.16",
        "typescript": "^4.6.4"
    }
}

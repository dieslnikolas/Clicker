        "nanoid": "^3.1.30",
        "pino": "^7.0.2",
        "pino-pretty": "^7.1.0",
        "prom-client": "^14.0.0",
        "response-time": "^2.3.2",
        "swagger-jsdoc": "^6.1.0",
        "swagger-ui-express": "^4.1.6",

{
    "name": "clicker",
    "productName": "Clicker",
    "version": "1.0.0",
    "description": "Application which can run scripts via UI",
    "homepage": "https://dev.azure.com/dieslnikolas/Clicker",
    "author": {
        "name": "Nikolas Diesl",
        "email": "dieslnikolas@gmail.com"
    },
    "keywords": [
        "angular",
        "angular 12",
        "electron",
        "nodejs",
        "typescript",
        "spectron",
        "eslint",
        "sass",
        "windows",
        "mac",
        "linux"
    ],
    "scripts": {
        "installdeps": "api:installdeps && shell:installdeps && client:installdeps",
        "build": "api:build && shell:build && client:build",
        "start": "api:start && client:start && wait-on tcp:4200 && shell:start",
        "development": "api:development && shell:development && client:development",
        
        "api:installdeps": "cd Clicker.API && npm run installdeps",
        "api:build": "cd Clicker.API && npm run build",
        "api:start": "cd Clicker.API && npm run start",
        "api:development": "cd Clicker.API && npm run development",

        "shell:installdeps": "cd Clicker.Shell && npm run installdeps",
        "shell:build": "cd Clicker.Shell && npm run build",
        "shell:start": "cd Clicker.Shell && npm start",
        "shell:development": "cd Clicker.Shell && npm run development",

        "client:installdeps": "cd Clicker.Client && npm run installdeps",
        "client:build": "cd Clicker.Client && npm run build",
        "client:start": "cd Clicker.Client && npm start",
        "client:development": "cd Clicker.Client && npm run development",
     
        "build:dev": "cd Clicker.Client && build:dev",
        "build:prod": "cd Clicker.Client && build:prod",
        "electron:local": "cd Clicker.Client && electron:local",
        "electron:build": "cd Clicker.Client && electron:build",

        "package": "todo",
        "postinstall": "cd Clicker.Client && postinstall",
        "version": "cd Clicker.Client && version"
    }
}

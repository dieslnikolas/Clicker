{
  "name": "clicker",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "build/electron/index.js",
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/cross-spawn": "^6.0.2",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.18.9",
    "@types/react": "^18.0.26",
    "@types/react-dom": "^18.0.9",
    "@types/superagent": "^4.1.16",
    "@types/uuid": "^9.0.0",
    "cross-spawn": "^7.0.3",
    "get-port-electron": "^5.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "superagent": "^8.0.6",
    "typescript": "^4.9.4",
    "uuid": "^9.0.0",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "concurrently": "^7.6.0",
    "cross-env": "^7.0.3",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "shx": "^0.3.4",
    "source-map-support": "^0.5.21",
    "tslint": "^6.1.3",
    "tslint-config-standard": "^9.0.0",
    "tslint-loader": "^3.5.4",
    "tslint-react": "^5.0.0",
    "wait-on": "^6.0.1"
  },
  "scripts": {
    "lint": "npm run electron-lint && npm run react-lint",
    "start": "concurrently \"npm run react-start\" \"npm run electron-start\"",
    "watch": "concurrently \"npm run electron-watch\" \"npm run react-watch\"",
    "build": "npm run backend-build && npm run react-build && npm run electron-build",
    "backend-build": "shx rm -rf backend/Clicker.Backend/bin && dotnet publish backend/Clicker.Backend/Clicker.Backend.csproj --self-contained -c release -r win10-x64 -o build/backend/backend-win && dotnet publish backend/Clicker.Backend/Clicker.Backend.csproj --self-contained -c release -r osx.10.11-x64 -o build/backend/backend-osx && dotnet publish backend/Clicker.Backend/Clicker.Backend.csproj --self-contained -c release -r ubuntu.16.10-x64 -o build/backend/backend-ubuntu",
    "backend-start": "dotnet run --project backend/Clicker.Api/Clicker.Backend.csproj",
    "electron-lint": "tslint -c tslint.json -p tsconfig.electron.json",
    "electron-start": "tsc -p tsconfig.electron.json && wait-on http://localhost:3000/ && cross-env NODE_ENV=development electron .",
    "electron-watch": "tsc -w -p tsconfig.electron.json",
    "electron-build": "tsc -p tsconfig.electron.json && electron-builder",
    "react-start": "react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.clicker.electron-dotnet",
    "productName": "Clicker",
    "forceCodeSigning": false,
    "directories": {
      "buildResources": "build",
      "output": "build/dist"
    },
    "extraMetadata": {
      "main": "build/electron/index.js"
    },
    "files": [],
    "extraResources": [],
    "extraFiles": [],
    "mac": {
      "asarUnpack": "backend-osx",
      "files": [
        "node_modules/**",
        "build/electron/**",
        "build/backend/backend-osx/**"
      ],
      "target": "dmg"
    },
    "mas": {},
    "dmg": {},
    "pkg": {},
    "win": {
      "asarUnpack": "backend-win",
      "files": [
        "node_modules/**",
        "build/electron/Main/**",
        "build/backend/backend-win/**"
      ],
      "target": "nsis"
    },
    "nsis": {},
    "nsisWeb": {},
    "portable": {},
    "appx": {},
    "squirrelWindows": {}
  }
}
